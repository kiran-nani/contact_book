<!DOCTYPE html>
<html>
	<head>
		<title><%= yield(:title) %> | ContactBook | One place for all your contacts</title>
		<%= csrf_meta_tags %>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>
	<body>
		<nav class="navbar navbar-inverse">
			<div class="container">
				<div class="navbar-header">
					<a class="navbar-brand" href="/">ContactBook</a>
				</div>
				<ul class="nav navbar-nav navbar-right">
					<% if user_logged_in? %>
						<li><%= link_to "Create New Contact", new_contact_path %></li>
						<li><a href="/contacts">My Contacts</a></li>
						<li><%= link_to "Logout", logout_path, method: :delete, data: { confirm: 'Are you sure??' }, class: "navbar-right" %></li>
					<% else %>
						<li><a class="navbar-right" href="/signup">Signup</a></li>
						<li><a class="navbar-right" href="/login">Login</a></li>
					<% end %>
				</ul>
			</div>
		</nav>
		<div class="container">
			<% flash.each do |message_type, message| %>
  			<div class="alert alert-<%= message_type %>"><%= message %></div>
			<% end %>
			<%= yield %>
		</div>
	</body>
</html>