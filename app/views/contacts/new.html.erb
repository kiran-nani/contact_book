<%= provide(:title, "Signup") %>
<div class="errors col-md-6 col-md-offset-2">
	<% if @contact.errors.any? %>
		<p class="alert alert-danger"><%= pluralize(@contact.errors.count, 'error') %> stopped you from saving you contact</p>
			<ul>
			<% @contact.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
	<% end %>
</div>

<div class="col-md-8 col-md-offset-4">
	<%= form_for (@contact) do |f| %>
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Pick a Category") %>
		<div class="input-group">
			<%= f.label :name %><br/>
			<%= f.text_field :name, class: "form-control" %>
		</div>
		
		<div class="input-group">
			<%= f.label :phone_number %><br/>
			<%= f.text_field :phone_number, class: "form-control" %>
		</div>

		<div class="input-group">
      <%= f.label :email %><br/>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="input-group">
			<%= f.label :contact_photo %><br/>
			<%= f.file_field :contact_photo, class: "form-control" %>
		</div>
		<br/>

		<%= f.submit "save", class: "btn btn-primary" %>
	<% end %>
</div>